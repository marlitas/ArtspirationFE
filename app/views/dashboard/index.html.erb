<div class="row">
  <div class="col-3 avatar">
    <% if !@liked_art[0].nil? %>
    <div class="avatar-frame">
      <img class="rounded-circle" alt="profile picture" src=<%= @liked_art[0].url %>
      data-holder-rendered="true">
    </div>
    <% end %>
  </div>
  <div class="col-md-8 mb-8">
    <h1 class="text-capitalize username"><%= @user.name %></h1>
  </div>
</div>
<br><br><br><br>

<div class="frame">
  <h2 id = 'curated'>Todays Curated Art Recommendation</h2>
  <% @recommended_art.each do |art| %>
    <a href= <%= "#{dashboard_artwork_path(art.id)}" %> id = 'curated-art' ><img src= <%= "#{art.url}" %> class="d-block w-100" alt="recommended art" >
    <p><%= art.title %></p></a>
    <p><%= art.artist %></p>
  <% end %>
</div>

<br><br><br><br><br><br>

<div class="row">
  <div style="overflow-x: scroll; overflow-y: hidden; white-space: nowrap;">
    <% total_liked_arts = @liked_art.count %>
    <%0..total_liked_arts.times do |i| %>
    <div class="col-4 align-items-stretch carousel" >
      <div class="card">
          <a href= <%= "#{dashboard_artwork_path(@liked_art[i].id)}" %> name="image-<%= i %>" ><img src= <%= "#{@liked_art[i].url}" %> class="card-img-top" alt="image-<%= i %>"></a>
        <div class="card-body" style="height: 125px;">
          <blockquote class="blockquote mb-0">
            <p><%= @liked_art[i].title %></p>
            <footer class="blockquote-footer"><cite title="Source Title"><%= @liked_art[i].artist %></cite></footer>
          </blockquote>
        </div>
      </div>
    </div>
    <%end %>
  </div>
</div>
